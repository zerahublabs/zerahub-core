{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": [
			"src/config/*.ts",
			"src/middlewares/*.ts",
			"src/models/*.ts",
			"src/routes/*.ts",
			"src/services/*.ts",
			"src/types/*.ts",
			"src/*.ts"
		],
        "ignore": [
            "src/generated/*"
        ]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
